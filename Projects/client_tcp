import socket

client = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client.settimeout(1)

try:
    client.connect(("127.0.0.1", 555))
    data = ("\n--Connection established").encode()
    client.send(data)

    pacotes_recebidos = client.recv(1024)

except Exception as erro:
    print("Connection failed")
    print(erro)