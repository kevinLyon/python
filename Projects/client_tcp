import socket

client = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client.settimeout(1)

try:
    client.connect(("127.0.0.1", 555))
    data =input("Mensagem: ").encode('utf-8')
    client.send(data)

    pacotes_recebidos = client.recv(2024)

    #print(pacotes_recebidos.decode('utf-8'))
except Exception as erro:
    print("Conexao falhou")
    print(erro)